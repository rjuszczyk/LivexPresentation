<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


	<ImageView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:adjustViewBounds="true"
		android:src="@drawable/form_top"/>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true"
			android:layout_marginRight="40dp"
			android:layout_marginBottom="10dp"
			android:layout_gravity="right|bottom"
			android:src="@drawable/pyt1_box"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:orientation="vertical">

		<ImageView

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true"
			android:layout_marginLeft="34dp"
			android:layout_marginBottom="20dp"
			android:src="@drawable/pyt1"/>

		<RadioButton
			android:id="@+id/q1"
			style="@style/CheckboxStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"

			android:text="Osoba agresywna"/>

		<RadioButton
			android:id="@+id/q2"
			style="@style/CheckboxStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"

			android:text="Osoba niezdecydowana"/>

		<RadioButton
			android:id="@+id/q3"
			style="@style/CheckboxStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"

			android:text="Osoba zamkniÄ™ta na porady z mojej strony"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<RadioButton
				android:id="@+id/q4"
				style="@style/CheckboxStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"

				android:text="@string/osoba_wymie_inne_problemy"/>
		</LinearLayout>

		<EditText
			android:id="@+id/input"
			android:layout_width="300dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="70dp"
			android:layout_marginTop="8dp"
			android:enabled="false"
			android:background="@drawable/background"/>

		<ImageView
			android:id="@+id/next"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom|left"
			android:layout_marginBottom="20dp"
			android:layout_marginTop="40dp"
			android:layout_marginLeft="70dp"
			android:src="@drawable/dalej"
			android:text="DALEJ"/>

	</LinearLayout>
	</FrameLayout>
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:adjustViewBounds="true"
		android:src="@drawable/form_bottom"/>
</LinearLayout>